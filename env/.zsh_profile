plugins=(
    git
    archlinux
    zsh-autosuggestions
    zsh-syntax-highlighting
    fast-syntax-highlighting
    copyfile
    copybuffer
    dirhistory
)

export XDG_CONFIG_HOME=$HOME/.config
export DEV_ENV=$HOME/personal/dev
export EDITOR=nvim

PERSONAL=$XDG_CONFIG_HOME/personal

for i in `find -L $PERSONAL`; do
	source $i
done

[ -f ~/.fzf.zsh ] && source ~/.fzf.zsh

addToPathFront() {
    if [[ ! -z "$2" ]] || [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

addToPathFront $HOME/.local/scripts
addToPathFront $HOME/.local/bin

if [[ -d "$HOME/Android" ]]; then
  addToPathFrom $HOME/Android/Sdk/platform-tools
fi

[[ -f "$HOME/.zsh/custom/plugins/zsh-autosuggestions/zsh-autosuggestions.plugin.zsh" ]] && \
  source "$HOME/.zsh/custom/plugins/zsh-autosuggestions/zsh-autosuggestions.plugin.zsh"

[[ -f "$HOME/.zsh/custom/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.plugin.zsh" ]] && \
  source "$HOME/.zsh/custom/plugins/zsh-syntax-highlighting/zsh-syntax-highlighting.plugin.zsh"
  autoload -Uz compinit && compinit -C   # cache completions

alias ls="ls --colo=auto"
alias cdp="cd ~/personal"
alias cds="cd ~/school"
alias git-init="git init && git add . && git commit -m \"init\""
alias shutdown="systemctl poweroff"
alias v="$EDITOR"
alias vim="$EDITOR"
alias wifi="nmtui"
alias c="clear"
